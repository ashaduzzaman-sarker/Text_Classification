# ============================================================================
# Example environment variables for local development and deployment
# ============================================================================

# ------------------------------
# MLflow Tracking
# ------------------------------
# MLFLOW_TRACKING_URI can be a remote server (e.g. http://mlflow.my-domain)
# or a local path such as file:./mlruns
MLFLOW_TRACKING_URI=file:./mlruns
MLFLOW_EXPERIMENT_NAME=text_classification_lora

# ------------------------------
# Azure Container Registry (ACR)
# ------------------------------
AZURE_CONTAINER_REGISTRY=your-acr-name.azurecr.io
AZURE_CONTAINER_IMAGE=text-classification-api
AZURE_CONTAINER_TAG=latest

# ------------------------------
# Azure Kubernetes Service (AKS)
# ------------------------------
AKS_RESOURCE_GROUP=your-resource-group
AKS_CLUSTER_NAME=your-aks-cluster
AKS_NAMESPACE=text-classification
